<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/listpo_bg"

    >

    <TextView
        android:id="@+id/tv_title_docs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_ijo"
        android:fontFamily="@font/poppins_semibold"
        android:text="Document 12"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_docs">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_reguler"
            android:text="Document No       :"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_reguler"
            android:text="Bussiness Partner :"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_reguler"
            android:text="Total Net Amount :"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_label"
        app:layout_constraintTop_toBottomOf="@id/tv_title_docs">

        <TextView
            android:id="@+id/tv_document_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_reguler"
            android:text="1000326/PO.ICS"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_bussinespartner_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_reguler"
            android:maxLength="20"
            android:text="Example"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_totalnet_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_reguler"
            android:text="50.000.000,00"
            android:textColor="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_detailline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_value" />


</androidx.constraintlayout.widget.ConstraintLayout>